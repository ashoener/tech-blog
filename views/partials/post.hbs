<div class="card mb-4">
  <div class="card-header d-flex">
    {{title}}
    <span class="ms-auto text-secondary">Posted by
      {{author.username}}
      on
      {{renderDate createdAt}}</span>
  </div>
  <div class="card-body">
    <p class="card-text">{{{renderMarkdown content}}}</p>
    {{#if viewButton}}
      <a href="/posts/{{id}}" class="btn btn-primary">View full post</a>
    {{/if}}
  </div>
</div>